{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ with G++",
            "type": "shell",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I", "C:\\msys64\\ucrt64\\include",
                "-L", "C:\\msys64\\ucrt64\\lib",
                "-static-libgcc",
                "-static-libstdc++"
